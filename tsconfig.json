{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "tsout",
        "sourceMap": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "include": [
        "./**/*.js",
        "./**/*.mjs",
        "./**/*.ts",
        "./typings", "darl.js", "run.js"
    ],
    "exclude": []
}